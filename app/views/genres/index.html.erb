<%= render 'shared/page_title', title: "Available genres" %>

<div align="center">
  <%= will_paginate %>
  <% @genres.each do |gen| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="user-title"><%= link_to gen.name.capitalize, genre_path(gen) %></li>
          <li><small><%= pluralize(gen.movies.count, "movie") if gen.movies %> </small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Edit this genre", edit_genre_path(gen) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
