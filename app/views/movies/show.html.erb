<%= render 'shared/page_title', title: @movie.name %>

<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>Description: </strong></h4>
  <hr />
  <%= simple_format(@movie.description) %>
  <hr />
  <% if @movie.genres.any? %>
    <p>Genres: <%= render @movie.genres %></p>
  <% end %>
  <div class="pull-right">
    <p class="center">
      <em>Created by:</em>
    </p>
    <p class="center">
      <%= link_to gravatar_for(@movie.user), user_path(@movie.user) %>
    </p>
    <p class="center">
      <small><%= @movie.user.username.capitalize %></small>
      <div class="pull-right"><%= time_ago_in_words(@movie.created_at) %> ago</div>
    </p>
  </div>

  <div class="movie-actions">
    <% if logged_in? && (current_user == @movie.user || current_user.admin?)%>
      <%= link_to "Edit this movie", edit_movie_path(@movie), class: 'btn btn-xs btn-warning' %>
      <%= link_to "Delete this movie", movie_path(@movie), method: :delete, data: { confirm: "Are you sure you want to delete?" },
                                      class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "Return to movies listing", movies_path, class: "btn btn-xs btn-primary" %>
  </div>
</div>

<div class="row liking">
  <div class="row col-md-8 col-md-offset-2">
    <%= link_to like_movie_path(@movie, like: true), method: :post do %>
      <i class="glyphicon glyphicon-thumbs-up"></i>
    <% end %> <%= @movie.thumbs_up_total %> ||
    <%= link_to like_movie_path(@movie, like: false), method: :post do %>
      <i class="glyphicon glyphicon-thumbs-down"></i>
    <% end %> <%= @movie.thumbs_down_total %>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>Comments: </h3>
      <hr />
      <%= form_for([@movie, @comment], remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :description, "Comment" %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Enter Comment Here" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit "Submit Comment", class: "btn btn-primary btn-lg btn-xlarge" %>
          </div>
        </div>
      <% end %>
      <hr />
    </div>
  </div>
<% end %>

<% if @movie.comments != 0 %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>Prior Comments: </h3>
        <div id="messages">
          <%= render partial: 'comments/comments', object: @comments %>
        </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>No Comments Yet!</h3>
    </div>
  </div>
<% end %>
